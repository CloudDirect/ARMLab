    "contentVersion": "1.0.0.0",
    "parameters": {
      "workspaceName": {
        "type": "string",
            "defaultValue": "CD-Monitoring-WS",
        "metadata": {
          "description": "workspaceName"
        }
      },
      "serviceTier": {
        "type": "string",
        "allowedValues": [
          "Free",
          "Standalone",
          "PerNode",
          "PerGB2018"
        ],
        "defaultValue": "PerGB2018",
        "metadata": {
          "description": "Service Tier: Free, Standalone, PerNode, or PerGB2018"
      }
        },
      "dataRetention": {
        "type": "int",
        "defaultValue": 30,
        "minValue": 7,
        "maxValue": 730,
        "metadata": {
          "description": "Number of days of retention. Free plans can only have 7 days, Standalone and OMS plans include 30 days for free"
        }
      },
      "location": {
        "type": "string",
        "allowedValues": [
          "East US",
          "West Europe",
          "Southeast Asia",
          "UK South",
          "Australia Southeast"
        ]
      }
    },
    "variables": {
      "Updates": {
        "Name": "[Concat('Updates', '(', parameters('workspaceName'), ')')]",
